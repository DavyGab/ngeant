{% extends '::layout.html.twig' %}
{% block body %}
    <section id="benefits-line" class="bg-color3 third-padding pattern-bg" style="">
        <div class="container" style="margin-top: 120px;">
            <div class="col-sm-8 col-md-offset-2">
                <h2 class="big-title text-center" data-selector="h2">Votre message</h2>
                <div class="row">
                    <div class="col-sm-8 col-md-offset-2">
                    	{{ form_start(form, {'attr': {'role': 'form', 'id': 'form'} }) }}
                            {{ form_widget(form.message, {'attr': {'class': 'form-control', 'placeholder': 'Votre message'}}) }}
                            <button type="submit" id="rent_submit" class="btn btn-lg btn-block btn-primary">Enregistrer</button>
                        {{ form_rest(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}