{% extends '::layout.html.twig' %}
{% block body %}
	<img src="{{ asset('appbundle/images/header_commande2.jpg') }}" style="width:100%">
	<div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
		<div class="col-md-12">
			<div class="col-xs-2 col-xs-offset-1"><i class="fa fa-4x fa-check" aria-hidden="true"></i>Informations</div>
			<div class="col-xs-2"><i class="fa fa-4x fa-long-arrow-right" aria-hidden="true"></i></div>
			<div class="col-xs-2"><i class="fa fa-4x fa-check" aria-hidden="true"></i>Message</div>
			<div class="col-xs-2"><i class="fa fa-4x fa-long-arrow-right" aria-hidden="true"></i></div>
			<div class="col-xs-2"><i class="fa fa-4x fa-check" aria-hidden="true"></i>Paiement</div>
		</div>
		{{ form_start(form, {'attr': {'role': 'form', 'id': 'form'} }) }}
			<div class="row">
				<div class="col-sm-6">
					<label for="{{ form.email.vars.id }}" class="control-label">Votre email *</label>
					{{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email', 'pattern': '[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,4}$'}}) }}
				</div>
				<div class="col-sm-6">
					<label for="{{ form.email.vars.id }}" class="control-label">Code postal de destination *</label>
					{{ form_widget(form.codePostal, {'attr': {'class': 'form-control', 'placeholder': 'Code Postal', 'pattern': '[0-9]{5}'}}) }}
				</div>
					{{ form_rest(form) }}
			</div>
		{{ form_end(form) }}
	</div>
{% endblock %}